{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
 "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": ["standard", "prettier", "plugin:vue/essential"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
