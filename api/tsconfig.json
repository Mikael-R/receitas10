{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"lib": ["ES6"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": false,
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {}
	}
}
